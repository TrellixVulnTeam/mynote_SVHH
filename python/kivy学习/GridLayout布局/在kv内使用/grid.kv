<GridLayoutWidget>:
    padding:30
    spacing:30
    cols:3


    col_force_default: True
    col_default_width: 240

    row_force_default: True
    row_default_height: 40

    cols_minimum: {0:130, 1:140}
    rows_minimum: {0:60}
    canvas:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos

    Button:
        text:'First'
        size_hint_x:None
        width:'100'
    
    Button:
        text:'Second'

    Button:
        text:'Third'

    Button:
        text:'Fourth'
